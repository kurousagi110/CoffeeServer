            <form class="form-horizontal mt-4" enctype="multipart/form-data" action="/cpanel/san-pham/them-san-pham"
              method="post">
              <div class="form-group">
                <label for="ten_san_pham">Tên sản phẩm</label>
                <input type="text" id="ten_san_pham" name="ten_san_pham" class="form-control" placeholder="" />
              </div>

              <div class="form-group">
                <label for="loai_san_pham">Loại sản phẩm</label>
                <select class="form-control" id="loai_san_pham" name="loai_san_pham">
                  {{#each loai_san_pham}}
                  <option value="{{this._id}}">{{this.ten_loai_san_pham}}</option>
                  {{/each}}
                </select>
              </div>

              <div class="form-group" id="ThemMang" class="d-flex align-items-center">
                <div class="form-group">
                  <div class="btn btn-primary" onclick="themTruongInput()"><i class="mdi mdi-plus-box me-2"></i> Thêm
                    size</div>
                </div>
              </div>

              <div class="form-group size-container" id="size-container">
              </div>

              <div class="form-group">
                <label for="mo_ta">Mô tả</label>
                <input type="text" id="mo_ta" name="mo_ta" class="form-control" placeholder="" />
              </div>

              <div class="custom-file">
                <input type="file" name="files" multiple class="custom-file-input" id="inputGroupFile01" />
                <label class="custom-file-label" for="inputGroupFile01">Chọn file</label>
              </div>

              <input type="hidden" id="sizesInput" name="sizes" value="">

              <div style="width: 100%; height:100%; display: flex; justify-content: center; align-items: center;">
                <button type="button" onclick="validateAndSubmit()" class="btn btn-primary"
                  style="width: 95%">Lưu</button>
              </div>
            </form>

          </div>
        </div>
      </div>

    </div>
    <script>

      function showLoading() {
        document.getElementById('loading-circle').style.display = 'flex';
      }

      function hideLoading() {
        document.getElementById('loading-circle').style.display = 'none';
      }


      async function validateAndSubmit() {
        // Validate the form data here
        showLoading();

        const ten_san_pham = document.getElementById('ten_san_pham').value;
        const loai_san_pham = document.getElementById('loai_san_pham').value;
        const mo_ta = document.getElementById('mo_ta').value;
        const filesInput = document.getElementById('inputGroupFile01');

        if (!ten_san_pham || !loai_san_pham || !mo_ta || !filesInput.files.length) {
          const result = await Swal.fire({
            icon: 'Lỗi',
            title: 'Oops...',
            text: 'Bạn hãy nhập đầy đủ không được để trống.',
            allowOutsideClick: false // Prevent clicking outside the modal to close it
          });

          if (result.isConfirmed) {
            hideLoading();
            return;
          }
        }

        // Show confirmation dialog
        const confirmationResult = await Swal.fire({
          title: 'Bạn có chắc chắn muốn thêm sản phẩm này?',
          showDenyButton: true,
          showCancelButton: true,
          confirmButtonText: 'Lưu',
          denyButtonText: "Chỉnh sửa."
        });

        if (confirmationResult.isConfirmed) {
          // Submit the form
          const formData = new FormData();
          formData.append('ten_san_pham', ten_san_pham);
          formData.append('loai_san_pham', loai_san_pham);
          formData.append('mo_ta', mo_ta);

          // Get the value from the hidden input field
          const sizesInput = document.getElementById('sizesInput').value;

          // Append the 'sizes' data to the form data
          formData.append('sizes', sizesInput);

          const filesInput = document.getElementById('inputGroupFile01');
          for (let i = 0; i < filesInput.files.length; i++) {
            formData.append('files', filesInput.files[i]);
          }
          try {
            const response = await fetch('/cpanel/san-pham/them-san-pham', {
              method: 'POST',
              body: formData,
            });

            if (response.ok) {
              hideLoading();
              Swal.fire({
                icon: 'success',
                title: 'Saved!',
                showConfirmButton: false,
                timer: 0,
              });

              window.location.href = '/cpanel/san-pham';

            } else {
              hideLoading();
              Swal.fire('Lỗi', 'Tên sản phẩm bị trùng', 'error');
            }
          } catch (error) {
            hideLoading();
            console.error(error);
            Swal.fire('Lỗi', 'Có lỗi xảy ra.', 'error');
          }
        } else if (confirmationResult.isDenied) {
          hideLoading();
          Swal.fire('Thay đổi của bạn chưa được lưu', '', 'info');
        }
      }

    </script>