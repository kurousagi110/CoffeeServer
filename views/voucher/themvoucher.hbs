    <script>
      const imgPreview = document.getElementById('img-preview');

      const imgs = [];

      function showImagePreview(file) {
        if (file.type.match('image.*')) {
          const reader = new FileReader();
          reader.onload = function (e) {
            imgs.push(e.target.result);
            showImages();
          };
          reader.readAsDataURL(file);
        } else {
          imgPreview.innerHTML = `<p style="color: red;">Vui lòng chọn file ảnh.</p>`;
        }
      }

      const inputGroupFile01 = document.getElementById('inputGroupFile01');
      inputGroupFile01.addEventListener('change', function (event) {
        if (event.target.files.length > 0) {
          for (const file of event.target.files) {
            showImagePreview(file);
          }
        } else {
          imgPreview.innerHTML = '';
        }
      });

      function showImages() {
        imgPreview.innerHTML = '';
        for (const img of imgs) {
          const imgElement = document.createElement('img');
          imgElement.src = img;
          imgElement.width = 200;
          imgElement.height = 200;
          imgPreview.appendChild(imgElement);
        }
      }


      function showLoading() {
        document.getElementById('loading-circle').style.display = 'flex';
      }

      function hideLoading() {
        document.getElementById('loading-circle').style.display = 'none';
      }


      async function validateAndSubmit() {
        // Validate the form data here
        showLoading();

        const mo_ta = document.getElementById('mo_ta').value;
        const ten_voucher = document.getElementById('ten_voucher').value;
        const ma_voucher = document.getElementById('ma_voucher').value;
        const diem = document.getElementById('diem').value;
        const ngay_ket_thuc = document.getElementById('ngay_ket_thuc').value;
        const filesInput = document.getElementById('inputGroupFile01');


        const missingField = !ten_voucher ? 'Tên voucher' :
          !ma_voucher ? 'Mã voucher' :
            !ten_voucher ? 'Tên voucher' :
              !diem ? 'Điểm' :
                !ngay_ket_thuc ? 'Ngày kết thúc' :
                  !filesInput.files.length ? 'Ảnh' :
                    null;

        if (missingField) {
          const result = await Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: `Bạn hãy nhập ${missingField}, không được để trống.`,
            allowOutsideClick: false
          });

          if (result.isConfirmed) {
            hideLoading();
            return;
          }
        }

        // Show confirmation dialog
        const confirmationResult = await Swal.fire({
          title: 'Bạn có chắc chắn muốn thêm voucher này?',
          showDenyButton: true,
          confirmButtonText: 'Xác nhận',
          denyButtonText: "Chỉnh sửa"
        });

        if (confirmationResult.isConfirmed) {
          // Submit the form
          const formData = new FormData();
          formData.append('mo_ta', mo_ta);
          formData.append('ten_voucher', ten_voucher);
          formData.append('ma_voucher', ma_voucher);
          formData.append('diem', diem);
          formData.append('ngay_ket_thuc', ngay_ket_thuc);
          formData.append('giam_gia', giam_gia);


          const filesInput = document.getElementById('inputGroupFile01');
          for (let i = 0; i < filesInput.files.length; i++) {
            formData.append('files', filesInput.files[i]);
          }
          try {
            const response = await fetch('/cpanel/voucher/them-voucher', {
              method: 'POST',
              body: formData,
            });

            if (response.status === 200) {
              hideLoading();
              Swal.fire({
                icon: 'success',
                title: 'Saved!',
                showConfirmButton: false,
                timer: 0,
              });

              window.location.href = '/cpanel/voucher';

            } else {
              hideLoading();
              Swal.fire('Lỗi', 'Mã voucher bị trùng', 'error');
            }
          } catch (error) {
            hideLoading();
            console.error(error);
            Swal.fire('Lỗi', 'Có lỗi xảy ra.', 'error');
          }
        } else if (confirmationResult.isDenied) {
          hideLoading();
          Swal.fire('Thay đổi của bạn chưa được lưu', '', 'info');
        } else {
          hideLoading();
        }
      }

    </script>