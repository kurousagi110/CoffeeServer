                <input value="0" type="number" id="ngay_ket_thuc" name="ngay_ket_thuc" class="form-control"
                  placeholder="" />
              </div>



              <div class="form-group">
                <label for="diem">Điểm (Điểm cần để đổi voucher nếu free điểm = 0)</label>
                <input value="0" type="number" id="diem" name="diem" class="form-control" placeholder="" />
              </div>



              <div class="custom-file">
                <input type="file" accept="image/*" multiple class="custom-file-input" id="inputGroupFile01">
                <label class="custom-file-label" for="inputGroupFile01">Chọn file</label>
                <div id="img-preview"></div>
              </div>


              <div style="width: 100%; height:100%; display: flex; justify-content: center; align-items: center;">
                <button type="button" onclick="validateAndSubmit()" class="btn btn-primary"
                  style="width: 95%">Lưu</button>
              </div>
