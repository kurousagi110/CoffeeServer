<script>
  function showMap() {
    // Show the map div
    document.getElementById('map').style.display = 'block';

    // Create a map centered at a default location (e.g., your city)
    const defaultLocation = { lat: 10.7769, lng: 106.7009 };
    const map = new google.maps.Map(document.getElementById('map'), {
      center: defaultLocation,
      zoom: 15,
    });

    // Create a marker to represent the selected location
    const marker = new google.maps.Marker({
      position: defaultLocation,
      map: map,
      draggable: true, // Allow the user to drag the marker
    });

    // Add an event listener for the dragend event (when the user stops dragging the marker)
    google.maps.event.addListener(marker, 'dragend', function (event) {
      const selectedLocation = {
        lat: event.latLng.lat(),
        lng: event.latLng.lng(),
      };

      // Store the selected location in the hidden input field
      document.getElementById('selectedLocation').value = JSON.stringify(selectedLocation);
    });
  }
</script>
